<Window x:Class="BudgetExpense.Tutorials.TutortialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetExpense.Tutorials"
        mc:Ignorable="d" Loaded="Window_Loaded"
        Title="TutortialsWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:TutorialsViewModel/>
    </Window.DataContext>
    <WrapPanel x:Name="panelTutorials">
        <ItemsControl ItemsSource="{Binding Tutorials}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock><Hyperlink Click="OpenLink" Tag="{Binding}"><Run Text="{Binding Namespace}"/></Hyperlink></TextBlock>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </WrapPanel>
</Window>
